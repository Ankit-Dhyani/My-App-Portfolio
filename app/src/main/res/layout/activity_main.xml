<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#d5f3fc"
    android:id="@+id/rel_layout"
    android:nestedScrollingEnabled="true">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_apps_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:textColor="#0c0c0c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify_stremer_button"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/my_apps_title"
        android:layout_alignLeft="@+id/my_apps_title"
        android:layout_alignStart="@+id/my_apps_title"
        android:layout_alignRight="@+id/my_apps_title"
        android:layout_alignEnd="@+id/my_apps_title"
        android:layout_alignParentEnd="false"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#F08C35"
        android:onClick="Toast_SPTFYSTRMR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/score_app_button"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#F08C35"
        android:layout_below="@+id/spotify_stremer_button"
        android:layout_alignLeft="@+id/spotify_stremer_button"
        android:layout_alignStart="@+id/spotify_stremer_button"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/spotify_stremer_button"
        android:layout_alignEnd="@+id/spotify_stremer_button"
        android:onClick="Toast_SCOREAPP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library_app_button"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#F08C35"
        android:layout_below="@+id/score_app_button"
        android:layout_alignLeft="@+id/score_app_button"
        android:layout_alignStart="@+id/score_app_button"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/score_app_button"
        android:layout_alignEnd="@+id/score_app_button"
        android:onClick="Toast_LIBAPP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILT IT BIGGER"
        android:id="@+id/built_it_bigger_button"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#F08C35"
        android:layout_below="@+id/library_app_button"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/library_app_button"
        android:layout_alignEnd="@+id/library_app_button"
        android:layout_alignLeft="@+id/library_app_button"
        android:layout_alignStart="@+id/library_app_button"
        android:onClick="Toast_BIB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz_reader_button"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#F08C35"
        android:layout_below="@+id/built_it_bigger_button"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/built_it_bigger_button"
        android:layout_alignEnd="@+id/built_it_bigger_button"
        android:layout_alignLeft="@+id/built_it_bigger_button"
        android:layout_alignStart="@+id/built_it_bigger_button"
        android:onClick="Toast_XYZReader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY  OWN APP"
        android:id="@+id/capstone"
        android:height="45sp"
        android:textAlignment="center"
        android:singleLine="false"
        android:textSize="18sp"
        android:background="#f01691"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_marginTop="13sp"
        android:layout_alignRight="@+id/xyz_reader_button"
        android:layout_alignEnd="@+id/xyz_reader_button"
        android:layout_alignLeft="@+id/xyz_reader_button"
        android:layout_alignStart="@+id/xyz_reader_button"
        android:onClick="Toast_Capstone" />

</RelativeLayout>
